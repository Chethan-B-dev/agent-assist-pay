<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProfile name="!docker">
        <!-- Console appender for local development (unchanged) -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level [%X{requestId:-}] [%X{customerId:-}] %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="docker">
        <!-- TCP appender to send logs to Logstash -->
        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>logstash:5000</destination>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <mdc/>
                    <message/>
                    <stackTrace/>
                    <pattern>
                        <pattern>
                            {
                            "service": "payments-service",
                            "version": "1.0.0"
                            }
                        </pattern>
                    </pattern>
                </providers>
            </encoder>
        </appender>

        <!-- Console JSON appender for Docker logs (keep this for debugging) -->
        <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <mdc/>
                    <message/>
                    <stackTrace/>
                    <pattern>
                        <pattern>
                            {
                            "service": "payments-service",
                            "version": "1.0.0"
                            }
                        </pattern>
                    </pattern>
                </providers>
            </encoder>
        </appender>

        <!-- Separate appender for events -->
        <appender name="EVENTS_LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>logstash:5000</destination>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <message/>
                    <mdc/>
                    <pattern>
                        <pattern>
                            {
                            "service": "payments-service",
                            "type": "event"
                            }
                        </pattern>
                    </pattern>
                </providers>
            </encoder>
        </appender>

        <logger name="EVENTS" level="INFO" additivity="false">
            <appender-ref ref="EVENTS_LOGSTASH"/>
        </logger>

        <root level="INFO">
            <appender-ref ref="LOGSTASH"/>
            <appender-ref ref="JSON_CONSOLE"/>
        </root>
    </springProfile>

    <!-- Logger levels (unchanged) -->
    <logger name="com.paynow" level="DEBUG"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
</configuration>